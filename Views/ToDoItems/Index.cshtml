@model IEnumerable<ToDoListApp.Models.ToDoItem>

@{
    ViewBag.Title = "ToDoList";
}

<h1>ToDoList</h1>

<p>
    @Html.ActionLink("Create New","Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model=>model.TaskName)</th>
            <th>@Html.DisplayNameFor(model => model.IsCompleted)</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.TaskName) </td>
                <td>@Html.DisplayFor(modelItem => item.IsCompleted)</td>
                <td>
                    @Html.ActionLink("Details","Details",new{id = item.Id} )
                    @Html.ActionLink("Edit","Edit",new{id =item.Id})
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
